{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["@cloudflare/workers-types"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "allowImportingTsExtensions": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/models": ["models"],
      "@/storage": ["storage"],
      "@/db": ["db/index"],
      "@/db/*": ["db/*"],
      "@/routes/*": ["routes/*"]
    }
  },
  "include": ["src"]
}
